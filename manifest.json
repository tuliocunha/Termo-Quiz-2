{
  "manifest_version": 3,
  "name": "ThermoQuiz",
  "version": "1.0",
  "description": "Interactive quiz platform for HVAC and Refrigeration topics",
  "permissions": [
    "storage",
    "unlimitedStorage"
  ],
  "action": {
    "default_popup": "html/index.html"
  },
  "icons": {
    "16": "images/icons/icon16.png",
    "48": "images/icons/icon48.png",
    "128": "images/icons/icon128.png"
  },
  "background": {
    "service_worker": "js/background.js"
  }
}
